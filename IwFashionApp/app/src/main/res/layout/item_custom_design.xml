<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_custom_design_list"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/imageViewCdesign"
        android:layout_width="142dp"
        android:layout_height="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nombre_Cdesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#090808"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toEndOf="@+id/imageViewCdesign"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reservarCdesign"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:background="#090808"
        android:onClick="Reservar"
        android:text="@string/reservar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/imageViewCdesign" />

    <TextView
        android:id="@+id/description_Cdesign"
        android:layout_width="230dp"
        android:layout_height="82dp"
        android:text="TextView"
        android:textColor="#090808"
        app:layout_constraintBottom_toTopOf="@+id/btn_reservarCdesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/imageViewCdesign"
        app:layout_constraintTop_toBottomOf="@+id/nombre_Cdesign" />

</androidx.constraintlayout.widget.ConstraintLayout>
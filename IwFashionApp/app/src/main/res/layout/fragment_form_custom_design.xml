<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txt_EmailDesgin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:baselineAligned="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/correo_desing"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF" />

        <EditText
            android:id="@+id/txt_TelDesgin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:baselineAligned="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/tel_desing"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#90FFFFFF" />

        <ImageView
            android:id="@+id/imageViewCustomDesign"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="64dp"
            android:baselineAligned="false"
            android:onClick="CargarImagen"
            app:srcCompat="@drawable/img_no_disponible"
            tools:srcCompat="@drawable/img_no_disponible" />

        <EditText
            android:id="@+id/txt_Description_design"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginBottom="64dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/description_desing"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#9AFFFFFF" />

        <Button
            android:id="@+id/button_send_Cdesign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:text="@string/enviar_custom_design" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>